<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tool="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
            style="@style/TextAppearance.AppCompat.Title"
            android:id="@+id/dialog_region_selector_title"
            android:padding="8dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tool:text="Hello this is the title"/>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/dialog_region_selector_recycler"
            android:layout_width="match_parent"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            android:layout_height="match_parent"
            android:layout_below="@+id/dialog_region_selector_title"
            android:layout_above="@+id/dialog_region_selector_apply_button"/>

    <android.support.design.button.MaterialButton
            android:id="@+id/dialog_region_selector_apply_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:text="@string/dialog_region_selector_apply_button"/>

</RelativeLayout>