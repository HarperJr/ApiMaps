<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.fragment.offlinemap.OfflineMapSettingsFragment"
        android:background="@color/colorPrimary">

    <include
            android:id="@+id/fragment_offline_map_toolbar"
            layout="@layout/toolbar"/>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/offline_map_recycler"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_offline_map_toolbar"
            android:layout_marginBottom="8dp"/>

</android.support.constraint.ConstraintLayout>