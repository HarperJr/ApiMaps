<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.BottomSheet.Modal"
        tools:context=".presentation.fragment.notification.NotificationFragment">

    <TextView
            android:id="@+id/notification_title"
            android:layout_margin="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/AppTheme.Title"
            android:text="@string/notification_title"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <android.support.v7.widget.RecyclerView
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            android:id="@+id/notifications_recycler"
            android:layout_width="match_parent"
            android:layout_height="256dp"
            app:layout_constraintTop_toBottomOf="@+id/notification_title"/>

    <android.support.design.button.MaterialButton
            style="@style/TextAppearance.MaterialComponents.Button"
            android:id="@+id/notification_add_btn"
            android:text="@string/notification_add_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/notifications_recycler"
            tools:layout_editor_absoluteX="0dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>